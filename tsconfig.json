{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es2021",
    "strict": true,
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["es2019", "dom"],
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "baseUrl": ".",
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }],
    "paths": {
      "context/*": ["src/context/*"],
      "hooks/*": ["src/hooks/*"],
      "hocs/*": ["src/hocs/*"],
      "utils/*": ["src/utils/*"]
    }
  },
  "exclude": ["node_modules"]
}
