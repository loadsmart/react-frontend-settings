{
  "compilerOptions": {
    "baseUrl": "src",
    "lib": ["es2019", "dom"],
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "target": "es2015",
    "jsx": "react",
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": ["node_modules"]
}
